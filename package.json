{
  "name": "crosshair-pro-desktop",
  "version": "2.2.6",
  "description": "CrosshairPro Desktop Overlay App - Premium Gaming Overlay",
  "main": "electron-app.obfuscated.js",
  "build": {
    "publish": {
      "provider": "github",
      "owner": "Schapat",
      "repo": "crosshair-desktop",
      "private": true
    },
    "appId": "com.crosshairpro.desktop",
    "productName": "CrosshairPro Desktop",
    "files": [
      "electron-app.obfuscated.js",
      "preload.js",
      "package.json",
      "overlay.html",
      "node_modules/**/*",
      "assets/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "icon": "assets/icon.ico",        
      "target": "nsis"                   
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,      
      "createStartMenuShortcut": true,     
      "installerIcon": "assets/icon.ico",  
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "artifactName": "CrosshairPro-Desktop-Setup-${version}.exe", 
      "shortcutName": "CrosshairPro Desktop"
    }
  },
  "scripts": {
    "start": "electron .",
    "install": "npm install",
    "obfuscate": "node obfuscate.js",
    "build": "npm run obfuscate && electron-builder"
  },
  "dependencies": {
    "electron-updater": "^6.6.2"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "javascript-obfuscator": "^4.1.1"
  },
  "author": "CrosshairPro",
  "license": "Commercial"
}
